<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Finacle</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('partials/header') %>

    
    <main class="main-content">
        <div class="container">
            <section class="welcome-section">
                <h1>Employee Sign Up</h1>
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="error-message"><%= error %></div>
                <% } %>
                <form class="signup-form" action="/signup" method="POST">
                    <div class="form-group">
                        <label for="ename">Employee Name</label>
                        <input type="text" id="ename" name="ename" required placeholder="Enter employee name">
                    </div>
                    <div class="form-group">
                        <label for="eemail">Employee Email</label>
                        <input type="email" id="eemail" name="eemail" required placeholder="Enter employee email">
                    </div>
                    <div class="form-group">
                        <label for="epass">Password</label>
                        <input type="password" id="epass" name="epass" required placeholder="Enter password">
                    </div>
                    <div class="form-group">
                        <label for="erole">Employee Role</label>
                        <select id="erole" name="erole" required>
                            <option value="">Select a role</option>
                            <option value="Admin">Admin</option>
                            <option value="Manager">Manager</option>
                            <option value="Employee">Employee</option>
                            <option value="HR">HR</option>
                        </select>
                    </div>
                    <button type="submit" class="submit-btn">Sign Up</button>
                </form>
            </section>
        </div>
    </main>

    <script src="/script.js"></script>
</body>
</html>